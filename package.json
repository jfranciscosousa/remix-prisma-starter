{
  "private": true,
  "name": "remix-prisma-starter",
  "description": "A Remix starter with Prisma and Vercel",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .eslintcache playwright-report build public/build .cache node_modules",
    "start": "remix-serve build/index.js",
    "build": "remix build",
    "dev": "remix dev",
    "postinstall": "remix setup node",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\" --cache",
    "test": "dotenv -e .env.test -- bash -c 'prisma db push -- --force && npm run build && playwright test'",
    "test:ci": "prisma db push && npm run build && playwright test",
    "prepare": "husky install",
    "deploy": "npm run ts-run tasks/validateConfig.ts && prisma generate && prisma db push && npm run build",
    "ts-check": "tsc --project tsconfig.json --noEmit --skipLibCheck",
    "ts-run": "dotenv ts-node",
    "validate-env": "npm run ts-run tasks/validateConfig.ts",
    "ci": "npm run lint && npm run ts-check && npx playwright install && npm run test"
  },
  "dependencies": {
    "@prisma/client": "5.3.1",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "@remix-run/node": "^2.0.1",
    "@remix-run/react": "2.0.1",
    "@remix-run/serve": "^2.0.1",
    "@remix-run/vercel": "1.19.3",
    "@vercel/node": "^2.15.10",
    "@vercel/remix": "^2.0.1",
    "accept-language-parser": "^1.5.0",
    "argon2": "^0.31.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "isbot": "^3.7.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.279.0",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-use": "^17.4.0",
    "remix": "2.0.1",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.2",
    "zod-error": "^1.5.0",
    "zod-form-data": "^2.0.1",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.1.0",
    "@playwright-testing-library/test": "^4.5.0",
    "@playwright/test": "^1.38.1",
    "@remix-run/dev": "^2.0.1",
    "@remix-run/eslint-config": "^2.0.1",
    "@types/accept-language-parser": "^1.5.4",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.10",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "autoprefixer": "^10.4.16",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-lodash": "^7.4.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.0.2",
    "husky": ">=8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "prisma": "5.3.1",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "type-fest": "^4.3.3",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "sideEffects": false,
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --cache --fix"
  }
}
