{
  "private": true,
  "name": "react-router-prisma-starter",
  "description": "A react-router starter with Prisma",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "clean": "rm -rf .eslintcache playwright-report build public/build .cache node_modules test-results",
    "start": "react-router-serve ./build/server/index.js",
    "build": "react-router build",
    "dev": "react-router dev",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\" --cache",
    "test": "npm run test:vitest && npm run test:e2e",
    "test:e2e": "dotenv -e .env.test -- bash -c 'prisma db push -- --force && npm run build && playwright test'",
    "test:e2e-quick": "dotenv -e .env.test -- bash -c 'playwright test'",
    "test:e2e-studio": "dotenv -e .env.test -- bash -c 'playwright test --ui'",
    "test:vitest": "vitest --run",
    "test:vitest:watch": "vitest",
    "prepare": "[ \"$NODE_ENV\" != \"production\" ] && husky || :",
    "deploy": "npm run ts-run tasks/validateConfig.ts && prisma generate && prisma db push && npm run build",
    "ts-check": "react-router typegen && tsc --project tsconfig.json --noEmit --skipLibCheck",
    "ts-watch": "react-router typegen && tsc --project tsconfig.json --noEmit --skipLibCheck --watch",
    "ts-run": "dotenv ts-node",
    "validate-env": "npm run ts-run tasks/validateConfig.ts",
    "ci": "npm run lint && npm run ts-check && npx playwright install && npm run test"
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.6",
    "@react-router/node": "^7.2.0",
    "@react-router/serve": "^7.2.0",
    "@uidotdev/usehooks": "^2.4.1",
    "accept-language-parser": "^1.5.0",
    "argon2": "^0.41.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "isbot": "^5.1.23",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.476.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.2.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.2",
    "zod-error": "^1.5.0",
    "zod-form-data": "^2.0.5"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.21.0",
    "@faker-js/faker": "^9.5.1",
    "@playwright-testing-library/test": "^4.5.0",
    "@playwright/test": "^1.50.1",
    "@react-router/dev": "^7.2.0",
    "@react-router/fs-routes": "^7.2.0",
    "@tailwindcss/vite": "^4.0.9",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/accept-language-parser": "^1.5.7",
    "@types/lodash": "^4.17.15",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vitest/ui": "^3.0.7",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-lodash": "^8.0.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-testing-library": "^7.1.1",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "prisma": "^6.4.1",
    "tailwindcss": "^4.0.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "vite": "^6.2.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.7"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --cache --fix"
  }
}
